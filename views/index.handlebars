
<div class="jumbotron">
	<div id="page-header">
		<h1>Trello Clone</h1>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class='col-md-6'>
			<form>
				<label>
					<h2>Create A Board</h2>
				</label>
				<input type="input" id="board-name">
				<button type="submit" id="submit-board">Submit</button>
				<label>
					<h2>Name Your List</h2>
				</label>
				<input type="input" id="list-name">
				<label>
					<h3>Type In Your Task</h3>
				</label>
				<input type="input" id="task">
				<br>
				<br>
				<button type="submit" id="submit">Submit</button>
			</form>
		</div>
		<div class="col-md-6 text-center">
			<h1>BOARDS</h1>
				{{#each boards}}
					<a href="/lists"><h2>{{this.name}}</h2></a>
				{{/each}}
		</div>
	</div>
</div>
